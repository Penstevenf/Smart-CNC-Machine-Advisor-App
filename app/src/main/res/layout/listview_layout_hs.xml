<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:background="@drawable/lines"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/sptitle"
            android:layout_width="800dp"
            android:layout_height="40dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="Replace Item"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/sptitle"
            android:fontFamily="sans-serif"
            android:paddingLeft="5dp"
            android:text="Line 5"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv1id"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_below="@+id/sptitle"
            android:layout_toRightOf="@id/tv1"
            android:fontFamily="sans-serif"
            android:visibility="gone"
            android:paddingLeft="5dp"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tv1"
            android:fontFamily="sans-serif"
            android:paddingLeft="5dp"
            android:text="Station"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/spstation"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tv1"
            android:layout_toRightOf="@id/tv2"
            android:fontFamily="sans-serif"
            android:paddingLeft="5dp"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tv2"
            android:fontFamily="sans-serif"
            android:paddingLeft="5dp"
            android:text="Machine"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/spmachine"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tv2"
            android:layout_toRightOf="@id/tv3"
            android:fontFamily="sans-serif"
            android:paddingLeft="5dp"
            android:text="Boiler"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv4"
            android:gravity="right"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/sptitle"
            android:layout_alignParentRight="true"
            android:fontFamily="sans-serif"
            android:paddingRight="10dp"
            android:text="PIC"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/sppic"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_below="@+id/sptitle"
            android:layout_toLeftOf="@id/tv4"
            android:fontFamily="sans-serif"
            android:gravity="right"
            android:paddingRight="5dp"
            android:text="Puji"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv5"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tv4"
            android:fontFamily="sans-serif"
            android:paddingRight="10dp"
            android:text="Date"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/spdate"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tv4"
            android:layout_marginTop="0dp"
            android:layout_marginRight="-2dp"
            android:layout_toLeftOf="@id/tv5"
            android:fontFamily="sans-serif"
            android:gravity="right"
            android:paddingRight="5dp"
            android:text="2020-12-12"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv6"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tv5"
            android:layout_alignParentRight="true"
            android:fontFamily="sans-serif"
            android:gravity="right"
            android:paddingRight="10dp"
            android:text="Date End"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/spdate2"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tv5"
            android:layout_toLeftOf="@id/tv6"
            android:fontFamily="sans-serif"
            android:gravity="right"
            android:paddingRight="5dp"
            android:text="2020-12-12"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv7"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tv6"
            android:layout_alignParentRight="true"
            android:fontFamily="sans-serif"
            android:gravity="right"
            android:paddingRight="10dp"
            android:text="Problem"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/sptype"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tv6"
            android:layout_toLeftOf="@id/tv7"
            android:fontFamily="sans-serif"
            android:gravity="right"
            android:paddingRight="5dp"
            android:text="Replace Item"
            android:textColor="@color/black"
            android:textSize="20sp" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>