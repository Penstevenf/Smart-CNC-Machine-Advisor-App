<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".Register">

    <RelativeLayout
        android:id="@+id/rl_Registerinput"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/sp_rectangle_root2"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/et_Registernpk"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#FFF"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="20dp"
            android:hint="NPK"
            android:paddingLeft="20dp"
            android:textSize="20sp" />
        <View
            android:id="@+id/v_separator4"
            android:background="#CFD3CF"
            android:layout_below="@id/et_Registernpk"
            android:layout_width="match_parent"
            android:layout_marginRight="35dp"
            android:layout_height="1dp"/>

        <EditText
            android:id="@+id/et_Registerfullname"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/v_separator4"
            android:backgroundTint="#FFF"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="20dp"
            android:hint="Fullname"
            android:paddingLeft="20dp"
            android:textSize="20sp" />

        <View
            android:id="@+id/v_separator3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/et_Registerfullname"
            android:background="#CFD3CF" />

        <EditText
            android:id="@+id/et_Registerusername"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/v_separator3"
            android:backgroundTint="#FFF"
            android:drawableLeft="@drawable/ic_baseline_person_outline_24"
            android:drawablePadding="20dp"
            android:hint="Username"
            android:paddingLeft="20dp"
            android:textSize="20sp" />

        <View
            android:id="@+id/v_separator"
            android:background="#CFD3CF"
            android:layout_below="@id/et_Registerusername"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <EditText
            android:id="@+id/et_Registerpassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/v_separator"
            android:backgroundTint="#FFF"
            android:drawableLeft="@drawable/ic_outline_lock_24"
            android:drawablePadding="20dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:textSize="20sp" />

        <View
            android:id="@+id/v_separator2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="35dp"
            android:layout_below="@id/et_Registerpassword"
            android:background="#CFD3CF" />

        <EditText
            android:id="@+id/et_Registeremail"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/v_separator2"
            android:backgroundTint="#FFF"
            android:drawableLeft="@drawable/ic_baseline_mail_outline_24"
            android:drawablePadding="20dp"
            android:hint="Email"
            android:paddingLeft="20dp"
            android:textSize="20sp" />

    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/f_Registerbtn"
        android:layout_marginEnd="40dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#FF9800"
        android:clickable="true"
        android:src="@drawable/ic_baseline_arrow_forward_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_Registertitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/rl_Registerinput"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="REGISTER"
        android:textSize="40sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_Registerlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_Registertitle"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="-56dp"
        android:background="@drawable/sp_rectangle_register"
        android:paddingLeft="30dp"
        android:paddingTop="15dp"
        android:paddingRight="20dp"
        android:paddingBottom="15dp"
        android:text="LOGIN"
        android:textAllCaps="false"
        android:textColor="#FF8221"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@id/rl_Registerinput"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FFFFFF"
        android:src="@drawable/binusaso" />

    <ImageView
        android:layout_width="371dp"
        android:layout_height="206dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-90dp"
        android:layout_marginTop="-66dp"
        android:backgroundTint="#FFFFFF"
        android:rotation="90"
        android:src="@drawable/hexagon" />

    <ImageView
        android:layout_width="760dp"
        android:layout_height="246dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-295dp"
        android:layout_marginBottom="-72dp"
        android:backgroundTint="#FFFFFF"
        android:rotation="-90"
        android:src="@drawable/hexagon" />

</RelativeLayout>