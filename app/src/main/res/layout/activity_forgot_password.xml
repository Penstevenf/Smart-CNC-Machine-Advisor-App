<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".ForgotPassword">

    <RelativeLayout
        android:id="@+id/rl_input"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/sp_rectangle_root"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_forgotemail"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#FFF"
            android:drawableLeft="@drawable/ic_baseline_person_outline_24"
            android:drawablePadding="20dp"
            android:hint="Enter Your Registered Email"
            android:paddingLeft="20dp"
            android:textSize="20sp" />

        <View
            android:id="@+id/v_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/et_forgotemail"
            android:background="#CFD3CF" />
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/f_forgotbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="60dp"
        android:backgroundTint="#FF9800"
        android:clickable="true"
        android:src="@drawable/ic_baseline_arrow_forward_24" />


    <TextView
        android:id="@+id/tv_forgotlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/rl_input"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:text="Forgot Password"
        android:textSize="40sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_forgotlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/sp_rectangle_login"
        android:paddingLeft="30dp"
        android:paddingTop="15dp"
        android:paddingRight="30dp"
        android:paddingBottom="15dp"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="#FF8221"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="760dp"
        android:layout_height="246dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-272dp"
        android:layout_marginBottom="-49dp"
        android:backgroundTint="#FFFFFF"
        android:rotation="-90"
        android:src="@drawable/hexagon" />

    <ImageView
        android:layout_width="371dp"
        android:layout_height="206dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-83dp"
        android:layout_marginTop="-44dp"
        android:backgroundTint="#FFFFFF"
        android:rotation="90"
        android:src="@drawable/hexagon" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@id/btn_forgotlogin"
        android:layout_marginLeft="60dp"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:backgroundTint="#FFFFFF"
        android:src="@drawable/binusaso" />


</RelativeLayout>