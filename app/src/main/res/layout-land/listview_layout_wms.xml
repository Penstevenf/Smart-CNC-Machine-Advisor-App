<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/category"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:background="@drawable/lines"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Mechanical"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tag"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/category"
            android:background="@drawable/lines"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="00001"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/area"
            android:background="@drawable/lines"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="2021-09-27"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/type"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/date"
            android:background="@drawable/lines"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Glass"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/itemname"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/type"
            android:background="@drawable/lines"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Glass Pane"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/qty"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/itemname"
            android:background="@drawable/lines"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="99"
            android:textColor="@color/black"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/copro"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/qty"
            android:background="@drawable/lines"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="01010"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/area"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/tag"
            android:background="@drawable/lines"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="W1"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/cabinet"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/copro"
            android:background="@drawable/lines"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="02"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/shelf"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/cabinet"
            android:background="@drawable/lines"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="01"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/shelf"
            android:background="@drawable/lines"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="1"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>