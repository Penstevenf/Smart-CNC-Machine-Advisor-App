<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/asset_category"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:background="@drawable/lines"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Mechanical"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/asset_part"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/asset_category"
            android:background="@drawable/lines"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Glass Pane"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/asset_qty"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/asset_part"
            android:background="@drawable/lines"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="99"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/lifetime"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/asset_qty"
            android:background="@drawable/lines"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="365"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/date_regis"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/lifetime"
            android:background="@drawable/lines"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="2021-11-16 19:15:47"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/asset_replace"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/date_regis"
            android:background="@drawable/lines"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="2021-11-16 19:15:47
"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_assetv_id"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/asset_replace"
            android:background="@drawable/lines"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="1"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>