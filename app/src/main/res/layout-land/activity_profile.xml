<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/prof"
    tools:context=".Profile"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

  <com.google.android.material.navigation.NavigationView
      android:id="@+id/nav_view"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_gravity="start"
      android:background="@color/white"
      app:headerLayout="@layout/header"
      app:menu="@menu/main_menu" />

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/white">

    <ImageView
        android:id="@+id/br"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:src="@drawable/custom_rectangle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#00FFFFFF"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/rsz_menu" />


    <ImageView
        android:id="@+id/logow"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/winteqwhite"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Switch
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="1.4"
        android:scaleY="1.4"
        android:textSize="14sp"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toBottomOf="@+id/logow"
        app:layout_constraintRight_toRightOf="parent"
        android:textOn="Active"
        android:textOff="Inactive"
        android:checked="true"
        android:fontFamily="sans-serif-condensed"
        android:text="Status"/>

    <Button
        android:id="@+id/upload"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:background="#00FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"/>

    <ImageView
        android:id="@+id/p"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/profile"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/w"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome Back,"
        android:textSize="38sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-condensed-medium"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/p"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:fontFamily="sans-serif-condensed"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/w"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fullname"
        android:textSize="20sp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="22dp"
        android:fontFamily="sans-serif-condensed-medium"
        app:layout_constraintTop_toBottomOf="@+id/br"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/e1"
        android:layout_width="450dp"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/sp_rectangle_root"
        android:textSize="20sp"
        android:padding="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/t1"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/e4"/>

    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="20sp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="22dp"
        android:fontFamily="sans-serif-condensed-medium"
        app:layout_constraintTop_toBottomOf="@+id/e1"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/e2"
        android:layout_width="450dp"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/sp_rectangle_root"
        android:textSize="20sp"
        android:padding="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/t2" />

    <TextView
        android:id="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NPK"
        android:textSize="20sp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="22dp"
        android:fontFamily="sans-serif-condensed-medium"
        app:layout_constraintTop_toBottomOf="@+id/e2"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/e3"
        android:layout_width="450dp"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/sp_rectangle_root"
        android:textSize="20sp"
        android:padding="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/t3" />

    <TextView
        android:id="@+id/t4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="20sp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="492dp"
        android:fontFamily="sans-serif-condensed-medium"
        app:layout_constraintTop_toBottomOf="@+id/br"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/e4"
        android:layout_width="450dp"
        android:layout_height="48dp"
        android:layout_marginLeft="490dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/sp_rectangle_root"
        android:textSize="20sp"
        android:padding="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/t4" />

    <TextView
        android:id="@+id/t5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textSize="20sp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="492dp"
        android:fontFamily="sans-serif-condensed-medium"
        app:layout_constraintTop_toBottomOf="@+id/e4"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/e5"
        android:layout_width="450dp"
        android:layout_height="48dp"
        android:layout_marginLeft="490dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/sp_rectangle_root"
        android:textSize="20sp"
        android:padding="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/t5" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#4b5ea5"
        app:layout_constraintTop_toBottomOf="@id/e5"
        app:layout_constraintLeft_toRightOf="@id/e3"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_baseline_arrow_forward_24"
        tools:ignore="SpeakableTextPresentCheck" />

  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>