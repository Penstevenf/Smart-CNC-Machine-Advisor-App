<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/linet"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/sen_status"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@drawable/lines"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Finish Repairing"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sen_cut_speed"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/sen_status"
            android:background="@drawable/lines"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="cut_speed"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sen_rpm"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/sen_cut_speed"
            android:background="@drawable/lines"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="rpm"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sen_feed"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/sen_rpm"
            android:background="@drawable/lines"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="feed"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sen_cut_time"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/sen_feed"
            android:background="@drawable/lines"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="cut_time"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/error_percentage"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/sen_cut_time"
            android:background="@drawable/lines"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="30%"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sen_date"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/error_percentage"
            android:background="@drawable/lines"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="2021-11-16 19:15:47"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sen_id"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/sen_date"
            android:background="@drawable/lines"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="1"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>